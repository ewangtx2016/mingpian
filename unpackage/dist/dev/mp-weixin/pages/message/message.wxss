@import "../../common/vendor.wxss";

.message_list .one {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EDEDED;
  margin: 20rpx;
}
.message_list .one .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 1000rpx;
  background: #EDEDED;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
  margin-right: 20rpx;
}
.message_list .one .mes {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.message_list .one .mes .title {
  overflow: hidden;
}
.message_list .one .mes .title .name {
  float: left;
  font-size: 35rpx;
  color: #373737;
}
.message_list .one .mes .title .time {
  float: right;
  font-size: 25rpx;
  color: #AAAAAA;
  margin-top: 15rpx;
}
.message_list .one .mes .p {
  color: #AAAAAA;
  margin-top: 20rpx;
  font-size: 30rpx;
}