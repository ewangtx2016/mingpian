
.content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.title {
  font-size: 36rpx;
  color: #8f8f94;
}
.list {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.list .li {
  font-size: 20rpx;
}
.list .li .date {
  font-size: 16rpx;
  color: #CCCCCC;
}
.xiaoxiao {
  background: #ededed;
  border-radius: 10rpx;
  margin: 10rpx;
  min-height: 200rpx;
  padding: 10rpx;
  position: relative;
}
.xiaoxiao .name {
  position: absolute;
  width: 100%;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  color: #000;
  font-size: 22rpx;
  left: 0;
  top: 10rpx;
  border-bottom: 1rpx dashed #ccc;
  padding-bottom: 10rpx;
}
.xiaohong {
  background: #fff;
  border: 1rpx solid #EDEDED;
}
.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-shadow: 0 0 3rpx rgba(0, 0, 0, 0.2);
}
.submit ._input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 26rpx;
  height: 100%;
  padding: 20rpx;
}
.submit ._button {
  width: 120rpx;
  font-size: 26rpx;
}