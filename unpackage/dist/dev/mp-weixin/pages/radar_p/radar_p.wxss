@import "../../common/vendor.wxss";

.radar_father {
  background: -webkit-linear-gradient(top, #d1d1d1 30%, #fff 70%);
  background: linear-gradient(to bottom, #d1d1d1 30%, #fff 70%);
  min-height: 100%;
}
.check_time {
  background: #fff;
  border-bottom: 1rpx solid #EDEDED;
  position: relative;
  height: 70rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.6);
}
.check_time .button {
  position: absolute;
  right: 30rpx;
  top: 0;
}
.check_time .button image {
  height: 50rpx;
  width: 50rpx;
}
.radar_list {
  padding: 20rpx;
}
.radar_list .message_list {
  background: rgba(0, 0, 0, 0.05);
  height: 0;
  padding: 0 20rpx;
  overflow: hidden;
  -webkit-transition-duration: 0.5s;
  transition-duration: 0.5s;
}
.radar_list .message_list.hover {
  height: auto;
  padding: 20rpx;
}
.radar_list .message_list .li {
  font-size: 30rpx;
  margin: 10rpx 0;
}
.radar_list .message_list .li text {
  font-weight: bold;
}
.radar_list .radar_one {
  margin: 10rpx 0;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.radar_list .radar_one .time {
  font-size: 30rpx;
  color: #373737;
  padding: 0 20rpx;
}
.radar_list .radar_one .list .one {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
}
.radar_list .radar_one .list .one > image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 1000rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}
.radar_list .radar_one .list .one .meg {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.radar_list .radar_one .list .one .meg .txt {
  margin-bottom: 20rpx;
}
.radar_list .radar_one .list .one .meg .txt text {
  color: #4A77B0;
}
.radar_list .radar_one .list .one .meg .txt,
.radar_list .radar_one .list .one .meg .title {
  color: #373737;
  line-height: 35rpx;
}
.radar_list .radar_one .list .one .date {
  width: 60rpx;
  color: #919191;
  font-size: 30rpx;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.radar_list .radar_one .list .one .date .jia {
  position: relative;
  border: 1rpx solid #ccc;
  border-radius: 100rpx;
  height: 50rpx;
  width: 50rpx;
  -webkit-transition-duration: 0.5s;
  transition-duration: 0.5s;
}
.radar_list .radar_one .list .one .date .jia.hover {
  -webkit-transform: rotate(180deg);
  transform: rotate(180deg);
}
.radar_list .radar_one .list .one .date .jia.hover:before {
  -webkit-transform: rotate(0);
  transform: rotate(0);
}
.radar_list .radar_one .list .one .date .jia:after {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 25rpx;
  width: 30rpx;
  height: 5rpx;
  background: #ccc;
}
.radar_list .radar_one .list .one .date .jia:before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 25rpx;
  width: 30rpx;
  height: 5rpx;
  background: #ccc;
  -webkit-transform: rotate(-90deg);
  transform: rotate(-90deg);
  -webkit-transition-duration: 0.5s;
  transition-duration: 0.5s;
}