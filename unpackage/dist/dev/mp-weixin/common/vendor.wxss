
.message {
  position: fixed;
  opacity: 0;
  -webkit-transform: translateY(-200rpx);
  transform: translateY(-200rpx);
  width: 96%;
  left: 2%;
  top: 10rpx;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  min-height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}
.message .img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.message .txt {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.message .txt .title {
  font-size: 30rpx;
  color: #454647;
}
.message .txt .mesg {
  font-size: 25rpx;
  color: #919191;
}
.radar_menu {
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.radar_menu navigator {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin: 30rpx 20rpx;
  border: 3rpx solid #4a77b0;
  text-align: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 35rpx;
  color: #4A77B0;
  border-radius: 1120rpx;
  padding: 10rpx 0;
}
.radar_menu navigator.hover {
  background: #4a77b0;
  color: #fff;
}
.sho_menu {
  height: 120rpx;
}
.footer_menu {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  height: 110rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.footer_menu navigator {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 100%;
}
.footer_menu navigator > view {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 5% 0;
}
.footer_menu navigator image {
  height: 100%;
  width: 100%;
}
.date_fater {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: #fff;
  z-index: 999;
}
.date_box {
  padding: 20rpx;
}
.date_one {
  margin: 20rpx 0;
}
.date_one .picker_one {
  font-size: 30rpx;
  border-radius: 10rpx;
  background: #EDEDED;
  padding: 20rpx 20rpx;
}
.date_btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.date_btn ._button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin: 20rpx 0;
}
.date_btn ._button:first-child {
  margin-right: 20rpx;
}