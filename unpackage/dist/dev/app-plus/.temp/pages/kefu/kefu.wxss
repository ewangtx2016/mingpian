@import "../../common/vendor.wxss";

.kefu {
  overflow: hidden;
  min-height: 100%;
  background: #f2f2f2;
  padding-bottom: 100rpx;
}
.kefu .sub_box {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  height: 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.kefu .sub_box ._input {
  border-radius: 10rpx;
  border: 2rpx solid rgba(145, 145, 145, 0.5);
  background: #fff;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
}
.kefu .sub_box ._button {
  width: 120rpx;
  height: 100%;
  padding: 0;
  background: #4A77B0;
  font-size: 35rpx;
  margin-left: 20rpx;
  line-height: 200%;
}
.kefu .time {
  margin: 20rpx 0;
  text-align: center;
}
.kefu .time text {
  background: #999999;
  color: #fff;
  border-radius: 100rpx;
  display: inline-block;
  margin: auto;
  font-size: 25rpx;
  text-align: center;
  padding: 10rpx 30rpx;
}
.kefu .one {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 30rpx 0;
}
.kefu .one.two .mes {
  text-align: left;
}
.kefu .one.two .mes .box {
  background: #fff;
  border: 1rpx solid #EDEDED;
  color: #000000;
}
.kefu .one.two .mes .box.noread:after {
  position: absolute;
  content: '\672A\8BFB';
  font-size: 25rpx;
  color: #4A77B0;
  left: auto;
  right: -80rpx;
  top: 50%;
  margin-top: -20rpx;
}
.kefu .one.two .mes .box .jian {
  right: auto;
  left: -10rpx;
  background: #FFFFFF;
  border-left: 1rpx solid #EDEDED;
  border-bottom: 1rpx solid #EDEDED;
}
.kefu .one .li {
  width: 150rpx;
  text-align: center;
}
.kefu .one .li image {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  border-radius: 1000rpx;
  background: #EDEDED;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.kefu .one .mes {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
}
.kefu .one .mes .box {
  border-radius: 20rpx;
  background: #4A77B0;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx;
  display: inline-block;
  margin-right: 20rpx;
  margin-left: 20rpx;
  position: relative;
  text-align: left;
}
.kefu .one .mes .box.noread:after {
  position: absolute;
  content: '\672A\8BFB';
  font-size: 25rpx;
  color: #4A77B0;
  left: -80rpx;
  top: 50%;
  margin-top: -20rpx;
}
.kefu .one .mes .box .jian {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: -10rpx;
  top: 20rpx;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  background: #4A77B0;
}