@import "../../common/vendor.wxss";

.radar_father {
  background: -webkit-linear-gradient(top, #d1d1d1 30%, #fff 70%);
  background: linear-gradient(to bottom, #d1d1d1 30%, #fff 70%);
  min-height: 100%;
}
.radar_list {
  padding: 20rpx;
}
.radar_list .radar_one {
  margin: 10rpx 0;
  margin-bottom: 20rpx;
}
.radar_list .radar_one .time {
  font-size: 30rpx;
  color: #373737;
  padding: 0 20rpx;
}
.radar_list .radar_one .list .one {
  padding: 20rpx;
  margin: 10rpx 0;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.radar_list .radar_one .list .one > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 1000rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}
.radar_list .radar_one .list .one .meg {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.radar_list .radar_one .list .one .meg .txt {
  margin-bottom: 20rpx;
}
.radar_list .radar_one .list .one .meg .txt view {
  display: inline-block;
}
.radar_list .radar_one .list .one .meg .txt view text {
  color: #4A77B0;
}
.radar_list .radar_one .list .one .meg .txt,
.radar_list .radar_one .list .one .meg .title {
  color: #373737;
  font-size: 30rpx;
  line-height: 35rpx;
}
.radar_list .radar_one .list .one .date {
  width: 100rpx;
  color: #919191;
  font-size: 30rpx;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}